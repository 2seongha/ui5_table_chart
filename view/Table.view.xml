<mvc:View
    controllerName="zc6.fi1401.mod.zc6fi1401.controller.Table"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns="sap.m"
    height="100%"
>
    <ScrollContainer
        height="100%"
        vertical="true"
        class="hideScroll"
    >
        <Table
            growing="true"
            growingThreshold="18"
            id="myTable"
            items="{
                        path:'/Dom14_01Set',
                        sorter:{
                            path:'Belnr'
                        }
                    }"
            mode="MultiSelect"
            sticky="HeaderToolbar,ColumnHeaders"
        >
            <headerToolbar>
                <OverflowToolbar style="Standard">
                    <Title text="FI Document List" />
                    <ToolbarSpacer />
                    <SearchField
                        width="20%"
                        search=".onFilter"
                        placeholder="Document Header Text"
                    />
                    <Button
                        text="Edit"
                        press=".onEdit"
                        icon="sap-icon://signature"
                        type="Neutral"
                    />
                    <Button
                        text="Save"
                        press=".onSave"
                        icon="sap-icon://save"
                        type="Emphasized"
                        enabled="{mode>/mode}"
                    />
                    <Button
                        text="Add"
                        press=".onAdd"
                        icon="sap-icon://add"
                        type="Success"
                        enabled="{mode>/mode}"
                    />
                    <Button
                        text="Delete"
                        press=".onDelete"
                        icon="sap-icon://delete"
                        type="Negative"
                        enabled="{mode>/mode}"
                    />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column
                    width="auto"
                    minScreenWidth="Tablet"
                    demandPopin="false"
                >
                    <Text text="CoCd" />
                </Column>
                <Column
                    width="10%"
                    minScreenWidth="Small"
                    demandPopin="false"
                >
                    <Text text="DocumentNo" />
                </Column>
                <Column width="auto">
                    <Text text="Year" />
                </Column>
                <Column
                    width="20%"
                    minScreenWidth="Small"
                    demandPopin="true"
                >
                    <Text text="HeaderText" />
                </Column>
                <Column
                    width="auto"
                    minScreenWidth="Small"
                    demandPopin="true"
                >
                    <Text text="type" />
                </Column>
                <Column
                    width="auto"
                    minScreenWidth="Small"
                    demandPopin="true"
                >
                    <Text text="Tx" />
                </Column>
                <Column
                    width="auto"
                    minScreenWidth="Small"
                    demandPopin="true"
                >
                    <Text text="Cost Ctr" />
                </Column>
                <Column
                    width="auto"
                    minScreenWidth="Small"
                    demandPopin="true"
                >
                    <Text text="ProcType" />
                </Column>
                <Column
                    width="4rem"
                    minScreenWidth="Small"
                    demandPopin="true"
                >
                    <Text text="Check" />
                </Column>
                <Column
                    width="auto"
                    minScreenWidth="Small"
                    demandPopin="true"
                >
                    <Text text="AmountLC" />
                </Column>
                <Column
                    width="auto"
                    minScreenWidth="Small"
                    demandPopin="true"
                >
                    <Text text="Crcy" />
                </Column>
                <Column
                    width="2rem"
                    demandPopin="false"
                    minScreenWidth="Tablet"
                />
            </columns>
            <items>
                <ColumnListItem id="lisItemForTable">
                    <cells>
                        <Text
                            text="{Bukrs}"
                            class="myCustomKeyField"
                        />
                        <Text
                            text="{Belnr}"
                            class="myCustomKeyField"
                        />
                        <Text
                            text="{Gjahr}"
                            class="myCustomKeyField"
                        />
                        <Input
                            value="{Bktxt}"
                            liveChange=".onLiveChange"
                            editable="{mode>/mode}"
                            class="myCustomInput"
                        >
                            <customData>
                                <c:CustomData
                                    key="editable"
                                    value="{mode>/classname}"
                                    writeToDom="true"
                                />
                            </customData>
                        </Input>
                        <Input
                            value="{Blart}"
                            liveChange=".onLiveChange"
                            editable="{mode>/mode}"
                            class="myCustomInput"
                        >
                            <customData>
                                <c:CustomData
                                    key="editable"
                                    value="{mode>/classname}"
                                    writeToDom="true"
                                />
                            </customData>
                        </Input>
                        <Input
                            value="{Mwskz}"
                            liveChange=".onLiveChange"
                            editable="{mode>/mode}"
                            class="myCustomInput"
                        >
                            <customData>
                                <c:CustomData
                                    key="editable"
                                    value="{mode>/classname}"
                                    writeToDom="true"
                                />
                            </customData>
                        </Input>
                        <Input
                            value="{Kostl}"
                            liveChange=".onLiveChange"
                            editable="{mode>/mode}"
                            class="myCustomInput"
                        >
                            <customData>
                                <c:CustomData
                                    key="editable"
                                    value="{mode>/classname}"
                                    writeToDom="true"
                                />
                            </customData>
                        </Input>
                        <Input
                            value="{Process}"
                            liveChange=".onLiveChange"
                            editable="{mode>/mode}"
                            class="myCustomInput"
                        >
                            <customData>
                                <c:CustomData
                                    key="editable"
                                    value="{mode>/classname}"
                                    writeToDom="true"
                                />
                            </customData>
                        </Input>
                        <CheckBox
                            selected="{Zcheck}"
                            select="onCheck"
                            editable="{mode>/mode}"
                        />
                        <Input
                            value="{Dmbtr}"
                            liveChange=".onLiveChange"
                            editable="{mode>/mode}"
                            class="myCustomInput"
                        >
                            <customData>
                                <c:CustomData
                                    key="editable"
                                    value="{mode>/classname}"
                                    writeToDom="true"
                                />
                            </customData>
                        </Input>
                        <Input
                            value="{Waers}"
                            liveChange=".onLiveChange"
                            editable="{mode>/mode}"
                            class="myCustomInput"
                        >
                            <customData>
                                <c:CustomData
                                    key="editable"
                                    value="{mode>/classname}"
                                    writeToDom="true"
                                />
                            </customData>
                        </Input>
                        <c:Icon
                            src="sap-icon://decline"
                            press=".onDeleteButton"
                            visible="{mode>/mode}"
                            color="darkgray"
                            hoverColor="red"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </ScrollContainer>
</mvc:View>
